
<%= form_for(@comida) do |f| %>
  <% if @comida.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comida.errors.count, "error") %> no se puede guardar la comida:</h2>

      <ul>
      <% @comida.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :descripcion %><br />
    <%= f.text_area :descripcion %>
  </div>
<!--  <div class="field"> -->
<!--    <%= f.label :imagen %><br /> -->
<!--    <%= f.file_field :photo %> -->
<!--  </div> -->
  <div class="field">
    <%= f.label :precio %><br />
    <%= f.text_field :precio %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </div>
  <div class="field">
    <%= f.label :categoria_comida %><br />
    <%= 

	f.collection_select(:categoria_comida_id, @CategoriaComida.all, :id, :categoria) 



    %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
